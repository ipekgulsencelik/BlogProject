﻿@using BlogProject.EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string status = "";
    string buttonTyp = "";
    int count = 0;
}

<br />
<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı - 1</th>
        <th>Hakkımda Başlığı - 2</th>
        <th>Hakkımda Fotoğraf 1</th>
        <th>Hakkımda Fotoğraf 2</th>
        <th>Durum</th>
        @*
            <th>Aktif Yap</th>
            <th>Pasif Yap</th>
        *@
    </tr>
    @foreach (var item in Model)
    {
        if (item.Status == true)
        {
            status = "Pasif Yap";
            buttonTyp = "btn btn-danger";
        }
        if (item.Status == false)
        {
            status = "Aktif Yap";
            buttonTyp = "btn btn-success";
        }
        <tr>
            count++;
            <td>@count</td>
            <td>@item.AboutDetails1</td>
            <td>@item.AboutDetails2</td>
            <td>@item.AboutImage1</td>
            <td>@item.AboutImage2</td>
            <td><a href="/About/IsActive/@item.AboutID" class="@buttonTyp">@status</a></td>
        </tr>
}
</table>
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Hakkımızda Yazı Girişi
</button>

@Html.Action("_AboutPartial", "About")